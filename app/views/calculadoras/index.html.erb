<p id="notice"><%= notice %></p>

<h1>Calculadoras</h1>

<table>
  <thead>
    <tr>
      <th>Num1</th>
      <th>Num2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calculadoras.each do |calculadora| %>
      <tr>
        <td><%= calculadora.num1 %></td>
        <td><%= calculadora.num2 %></td>
        <td><%= link_to 'Show', calculadora %></td>
        <td><%= link_to 'Edit', edit_calculadora_path(calculadora) %></td>
        <td><%= link_to 'Destroy', calculadora, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

